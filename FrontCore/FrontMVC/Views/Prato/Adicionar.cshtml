@model FrontMVC.Models.Prato.PratoModel

@{
    ViewData["Title"] = "Adicionar";
}


<div class="wrapper wrapper--w960">
    <div class="card card-2">
        <div class="card-heading"></div>
        <div class="card-body">
            <h2 class="title">Adicionar Prato</h2>
            <form asp-action="Adicionar" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="input-group">
                    <input class="input--style-2" type="text" placeholder="Titulo" asp-for="Titulo"
                           data-val="true" data-val-required="Por favor, insira um Titulo">
                    <span asp-validation-for="Titulo" class="text-danger"></span>

                </div>
                <div class="input-group">
                    <input class="input--style-2" type="text" placeholder="Descricao" asp-for="Descricao"
                           data-val="true" data-val-required="Por favor, insira uma descrição">
                    <span asp-validation-for="Descricao" class="text-danger"></span>
                </div>
                <div class="row row-space">
                    <div class="col-2">
                        <div class="input-group">
                            <input asp-for="Valor" class="input--style-2" type="text" placeholder="Valor" data-val="true" data-val-required="Por favor, insira um valor" />
                        </div>
                    </div>
                </div>
                <div class="row row-space">
                    <div class="col-5">
                        <div class="input-group">
                            <label asp-for="Foto" class="control-label"></label>
                            <input asp-for="FotoBase" class="input--style-2" type="file" data-val="true" data-val-required="Por favor, selecione uma imagem" />
                        </div>
                    </div>
                </div>
                <div class="row row-space">
                    <div class="col-2">
                        <div class="input-group">
                            <label asp-for="Status" class="control-label"></label>
                            <input type="hidden" asp-for="Status" value="false" id="codStatus" />
                        </div>
                        <div class="form-group">
                            <button type="button" class="btn btn-sm btn-toggle" data-toggle="button"
                                    aria-pressed="false" autocomplete="off">
                                <div class="handle"></div>
                            </button>
                        </div>
                    </div>
                </div>
                <div class="p-t-30">
                    <input type="submit" value="Salvar" class="btn btn--radius btn--green" />
                </div>
                <br />
            <div class="text-center">
                <a asp-action="Index">Voltar</a>
            </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
        <script>

            var button = document.querySelector('.btn-toggle');
            var hiddenInput = document.querySelector('#codStatus');

            button.addEventListener('click', function () {
                var pressed = button.getAttribute('aria-pressed') === 'true';
                button.setAttribute('aria-pressed', !pressed);
                hiddenInput.value = !pressed;
            });

        </script>

    }
    }
