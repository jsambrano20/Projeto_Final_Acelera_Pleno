@model FrontMVC.Models.Cliente.ClienteModel

@{
    ViewData["Title"] = "Adicionar";
}

<div class="wrapper wrapper--w960">
    <div class="card card-2">
        <div class="card-heading3"></div>
        <div class="card-body">
            <h2 class="title">Adicionar</h2>
            <form asp-action="Adicionar" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="input-group">
                    <input class="input--style-2" type="text" placeholder="Nome" asp-for="Nome"
                           data-val="true" data-val-required="Por favor, insira um Nome">
                    <span asp-validation-for="Nome" class="text-danger"></span>

                </div>
                <div class="input-group">
                    <input class="input--style-2" type="text" placeholder="CPF" asp-for="CPF"
                           data-val="true" data-val-required="Por favor, insira um CPF"
                           id="cpf-mask"  maxlength="14">
                    <span asp-validation-for="CPF" class="text-danger"></span>
                </div>
                <div class="p-t-30">
                    <input id="enviar" type="submit" value="Salvar" class="btn btn--radius btn--green" />
                </div>
                 <br />
            <div class="text-center">
                <a asp-action="Index">Voltar</a>
            </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
