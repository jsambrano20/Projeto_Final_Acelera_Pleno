@model IEnumerable<AceleraPlenoTrabalhoFinal.Mvc.Models.Prato>

@{
    ViewBag.Title = "Index";
}

<div class="boxWhite">
    <h2>Pratos</h2>
</div>

<hr />

<div class="boxWhite">
    <br />
    <table class="table" style="text-align:center">
        <tr>
            @*<th>
                    @Html.DisplayNameFor(model => model.Observacao)
                </th>*@
            <th>
                @Html.DisplayNameFor(model => model.Titulo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Valor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Foto)
            </th>
            @*<th>
                    @Html.DisplayNameFor(model => model.Status)
                </th>*@
            @*<th></th>*@
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                @*<td>
                        @Html.DisplayFor(modelItem => item.Observacao)
                    </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.Titulo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Valor)
                </td>
                <td>
                    <img width="80px" src="data:image/jpeg;base64,@Convert.ToBase64String(item.Jpg)" />
                    @*@Html.DisplayFor(modelItem => item.Foto)*@
                </td>
                @*<td>
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>*@
                @*<td>
                        @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id=item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id=item.Id })
                    </td>*@
            </tr>
        }

    </table>
</div>


